            letter-spacing: 1px;
            text-transform: uppercase;
        }

        #container {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            padding: 20px;
            justify-content: center;
        }
        .card {
            border: 1px solid #ccc;
            border-radius: 8px;
            width: 250px;
            padding: 10px;
            box-shadow: 0px 2px 5px rgba(0,0,0,0.2);
            background: white;
            transition: transform 0.2s;
        }
        .card:hover {
            transform: scale(1.03);
        }
        .card img {
            width: 100%;
            height: 150px;
            object-fit: cover;
            border-radius: 6px;
        }
        .card h3 {
            margin: 10px 0 5px;
